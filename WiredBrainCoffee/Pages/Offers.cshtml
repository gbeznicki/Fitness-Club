@page
@model FitnessClub.OffersModel
@{
    ViewData["Title"] = "Offers";
    Layout = "~/Pages/_Layout.cshtml";
}

<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
    <h1 class="display-4">Pricing</h1>
    <p class="lead">Here You can choose between our training offers. Whatever suits You best.</p>
</div>

<div class="container">
    <div class="card-deck mb-3 text-center">
        <div class="card mb-4 shadow-sm">
            <div class="card-header">
                <h4 class="my-0 font-weight-normal">One-time entry</h4>
            </div>
            <div class="card-body">
                <h1 class="card-title pricing-card-title">$10</h1>
                <ul class="list-unstyled mt-3 mb-4">
                    <li>One time entry</li>
                </ul>
                <button type="button" class="btn btn-lg btn-block btn-primary">Sign up - first entry for free</button>
            </div>
        </div>
        <div class="card mb-4 shadow-sm">
            <div class="card-header">
                <h4 class="my-0 font-weight-normal">Monthly card</h4>
            </div>
            <div class="card-body">
                <h1 class="card-title pricing-card-title">$50</h1>
                <ul class="list-unstyled mt-3 mb-4">
                    <li>One month entry</li>
                    <li>No contract</li>
                </ul>
            </div>
        </div>
        <div class="card mb-4 shadow-sm">
            <div class="card-header">
                <h4 class="my-0 font-weight-normal">Anual card</h4>
            </div>
            <div class="card-body">
                <h1 class="card-title pricing-card-title">$500</h1>
                <h2 class="text-muted">or</h2>
                <h1 class="card-title pricing-card-title">42$ <small class="text-muted">/ mo</small></h1>

                <ul class="list-unstyled mt-3 mb-4">
                    <li>Billed monthly or anually</li>
                    <li>Two months free</li>
                    <li>Simple contract</li>
                    <li>Spa centre 20% discount</li>
                </ul>
            </div>
        </div>
    </div>
</div>